{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "incremental": true,
        "declarationDir": "dist",
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@sxo/*": ["packages/sxo-*/src", "packages/*/src"],
            "react-sxo": ["adaptors/react-sxo/src"],
            "*-sxo": ["adaptors/*-sxo/src"],
            "vite-plugin-sxo": ["adaptors/vite-plugin-sxo/src"]
        }
    },
    "include": ["packages", "adaptors", "examples"],
    "exclude": ["node_modules", "**/dist"]
}
