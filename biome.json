{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noStaticElementInteractions": "off",
                "useKeyWithClickEvents": "off",
                "useAltText": "warn"
            },
            "style": {
                "useSelfClosingElements": "warn",
                "noNonNullAssertion": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noArrayIndexKey": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "overrides": [
        {
            "includes": ["*.vue"],
            "formatter": {
                "indentWidth": 2
            }
        },
        {
            "includes": ["*.yaml", "*.yml"],
            "formatter": {
                "indentWidth": 2
            }
        }
    ]
}
