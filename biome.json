{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": false
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all"
        }
    },
    "overrides": [
        {
            "includes": ["*.vue"],
            "formatter": {
                "indentWidth": 2
            }
        },
        {
            "includes": ["*.yaml", "*.yml"],
            "formatter": {
                "indentWidth": 2
            }
        }
    ]
}
